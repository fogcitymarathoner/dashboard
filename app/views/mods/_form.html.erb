<%= form_for @mod, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_ios_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mod_ios_url, :class => 'text_field', :label => 'YOYYO' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_ios_dl_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mod_ios_dl_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_tile_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mod_tile_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_page_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :mod_page_number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_default, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :mod_default, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mod_rec, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :mod_rec, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mods_path, :class => 'btn' %>
  </div>
<% end %>
