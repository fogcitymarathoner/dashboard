          <div class="container">
      
            <div class="row">
              
              
              <div class="span8 offset2"> 
                
                
                <div class="widget">
                
              <div class="widget-header">
                <i class="icon-bookmark"></i>
                <h3>Module</h3>
              </div> <!-- /widget-header -->
              
              <div class="widget-content">

                <%- model_class = Mod -%>
                <div class="page-header">
                </div>

                <dl class="dl-horizontal">
		
                  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
                  <dd><%= @mod.name %></dd>
                
		<dt><strong><%= model_class.human_attribute_name(:mod_ios_url) %>:</strong></dt>
                  <dd><%= @mod.mod_ios_url %></dd>
 
		<dt><strong><%= model_class.human_attribute_name(:mod_ios_dl_url) %>:</strong></dt>
                  <dd><%= @mod.mod_ios_dl_url %></dd>
		
		<dt><strong><%= model_class.human_attribute_name(:mod_tile_url) %>:</strong></dt>
                  <dd><img class="handle" src="<%= @mod.mod_tile_url %>" height="77" width="77"></dd>
		  
                  <dt><strong><%= model_class.human_attribute_name(:mod_page_number) %>:</strong></dt>
                  <dd><%= @mod.mod_page_number %></dd>
		  
                  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
                  <dd><%= @mod.position %></dd>
		  
                  <dt><strong><%= model_class.human_attribute_name(:mod_default) %>:</strong></dt>
                  <dd><%= @mod.mod_default %></dd>
		  
                  <dt><strong><%= model_class.human_attribute_name(:mod_rec) %>:</strong></dt>
                  <dd><%= @mod.mod_rec %></dd>
		  
                </dl>

                <div class="form-actions">
<!--                   <%= link_to t('.back', :default => t("helpers.links.back")),
                              mods_path, :class => 'btn'  %> -->
                  <a href="/"><button href="/mods" class="button btn btn-success">Go Home</button></a><br><br>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_mod_path(@mod), :class => 'btn' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              mod_path(@mod),
                              :method => 'delete',
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-danger' %>
                </div>

              </div> <!-- /widget-content -->
              
            </div> <!-- /widget -->
                  
          </div> <!-- /span8 offset2 -->
          
        </div> <!-- /row -->
  
      </div> <!-- /container -->